  <key>dvbs2_ldpc_bb</key>
  <category>[DVB]/DVB-S2</category>
  <import>import dvbs2</import>
  <make>dvbs2.ldpc_bb($framesize.val, #slurp
#if str($framesize) == 'FECFRAME_NORMAL'
$rate1.val, #slurp
#else if str($framesize) == 'FECFRAME_MEDIUM'
$rate2.val, #slurp
#else
$rate3.val, #slurp
#end if
$constellation.val)</make>
